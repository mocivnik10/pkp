<div class="fh5co-features-style-1 subpages-header" style="background-image: url(assets/articles_background.jpg);" data-stellar-background-ratio="0.5">
  <div class="fh5co-overlay"></div>
  <div class="container" style="z-index: 3; position: relative;">
  <div class="row p-b"></div>
    <div class="row">
      <div class="fh5co-features">
        <div class="fh5co-feature wow fadeInUp pages_header" data-wow-duration="1s" data-wow-delay=".8s">
          <h2 class="fh5co-heading">Prispevki</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% if @articles.any? %>
    <% @articles.in_groups_of(3, false) do |group| %>
    <div class="row p-b">
      <% group.each do |article| %>
      <div class="col-md-4">
        <%= link_to article_path(article) do %>
          <div class="thumbnail article-thumbnail">
            <% if article.image? %>
              <p><%= image_tag article.image.url(:medium), style:'width: 100%; height: 250px;' %></p>
            <% else %>
            <% end %>
            <div class="caption">
              <h3><%= article.title %></h3>
              <p><%= article.description.truncate_words(20, omission:'...').html_safe %></p>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
  <% else %>
    <p>Trenutno se ni novic!</p>
  <% end %>
</div>
