<h2>Prispevki <small><%= link_to '+Dodaj nov Prispevek', new_admin_article_path %></small></h2>

<div class="">
  <% if @articles.any? %>
    <div class="article">
      <table class="table">
        <thead>
          <tr>
            <td>ID</td>
            <td>Naslov</td>
            <td>Opis</td>
            <td>Actions</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
    <% @articles.each do |article| %>
            <tr>
              <td><%= article.id %></td>
              <td><%= article.title %></td>
              <td><%= article.description.truncate_words(7, omission: '...').html_safe %></td>
              <td>
                <%= link_to 'Uredi', edit_admin_article_path(article) %> |
                <%= link_to 'Prikazi', admin_article_path(article) %> |
                <%= link_to 'Zbrisi', admin_article_path(article), method: :delete, data: { confirm: 'Ali ste prepricani?'} %>
              </td>
              <td><%= article.created_at.to_formatted_s(:short) %></td>
            </tr>
    <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
    <p>Trenutno se ni dodanih clankov!</p>
  <% end %>
    <%= paginate @articles %>
  </div>
