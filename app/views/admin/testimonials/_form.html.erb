<%= form_for [:admin, @testimonial], html: {class: 'form-horizontal'} do |f| %>
  <% if testimonial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>

      <ul>
      <% testimonial.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :first_name, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, id: :testimonial_first_name, class:'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, id: :testimonial_last_name, class:'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_name, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :company_name, id: :testimonial_company_name, class:'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, id: :testimonial_description, rows:'10', class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Shrani', class:'btn btn-default' %>
      <%= link_to 'Prekliči', admin_testimonials_path, class:'btn btn-danger' %>
    </div>
  </div>
<% end %>
